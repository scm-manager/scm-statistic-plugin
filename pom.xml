<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>scm-plugins</artifactId>
    <groupId>sonia.scm.plugins</groupId>
    <version>1.23</version>
  </parent>

  <groupId>sonia.scm.plugins</groupId>
  <artifactId>scm-statistic-plugin</artifactId>
  <version>1.9-SNAPSHOT</version>
  <name>scm-statistic-plugin</name>
  <url>https://bitbucket.org/sdorra/scm-statistic-plugin</url>
  <description>Build statistics for every repository.</description>
  
  <scm>
    <connection>scm:hg:https://bitbucket.org/sdorra/scm-statistic-plugin</connection>
    <developerConnection>scm:hg:https://bitbucket.org/sdorra/scm-statistic-plugin</developerConnection>
    <url>https://bitbucket.org/sdorra/scm-statistic-plugin</url>
    <tag>HEAD</tag>
  </scm>

  <dependencies>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>${servlet.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.powermock</groupId>
      <artifactId>powermock-api-mockito</artifactId>
      <version>${powermock.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.powermock</groupId>
      <artifactId>powermock-module-junit4</artifactId>
      <version>${powermock.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>sonia.scm</groupId>
      <artifactId>scm-test</artifactId>
      <version>${project.parent.version}</version>
      <scope>test</scope>
    </dependency>

  </dependencies>
  
  <repositories>
    
    <repository>
      <id>maven.scm-manager.org</id>
      <name>scm-manager release repository</name>
      <url>http://maven.scm-manager.org/nexus/content/groups/public</url>
    </repository>
  
  </repositories>

  <properties>
    <powermock.version>1.5.1</powermock.version>
  </properties>

</project>
